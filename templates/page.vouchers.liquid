<div class="content">
  <h1 class="feature-header" data-cc-animate>{{ page.title }}</h1>

  <div class="rte" data-cc-animate data-cc-animate-delay="0.2s">
    {{ page.content }}
  </div>
</div>

<div class="voucher-pop-up">
  <div class="pop-up-inner">
    <div class="pop-up-dismiss">&times;</div>
  <div class="checkwrapper"> <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"> <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/> <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
  </svg>
  </div>    
    <div class="h3"></div>
    <p class="desc"></p>
    <p style="margin-top: 0">Happy shopping!</p>
    <div class="btnz">
      <a class="pop-up-dismiss">Continue</a>
      <a href="https://auraathletica.com/cart">View Cart</a>
    </div>
  </div>
</div>
    
<script>
   $( document ).ready(function() {
      $(".voucher-container").on('click', 'a', function(e) {
         e.preventDefault();
         var self = $(this).closest(".voucher-gutter");
         var voucherName = self.find(".voucher-code").text();
         var url = self.find("a").attr('href');
         let voucherDesc = $(this).next().html();
         $.get(url, function() {
           $(".voucher-pop-up").css("display","block");
           $(".voucher-pop-up .h3").empty();
           $(".voucher-pop-up .desc").empty();
           $('.voucher-pop-up .h3').append("You have claimed <strong>"+voucherName+"</strong>");
           $('.voucher-pop-up .desc').append("Enjoy "+voucherDesc);
           $("#page-vouchers").css("overflow","hidden");
         });
        $(this).css("cursor","wait");
        setTimeout(() => {$(this).empty().text("Claimed").css("pointer-events","none")}, 2500);
      });   
     $(".pop-up-dismiss").on('click', function(){
       $(".voucher-pop-up").hide();
           $("#page-vouchers").css("overflow","unset");
     })
    });
</script>
